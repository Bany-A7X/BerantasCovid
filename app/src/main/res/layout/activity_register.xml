<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:padding="10dp"
    android:background="@drawable/bg_register"
    tools:context=".Register">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:text="REGISTER"
        android:textColor="#F6EEEE"
        android:textSize="36sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/profileuser_icon"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="100dp"/>

    <EditText
        android:id="@+id/username"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="-53dp"
        android:background="@drawable/button_background"
        android:foreground="@color/Background_button_detail_light"
        android:hint="Username"
        android:padding="10dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#B3EAE0E0" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/user_icon"
        android:layout_marginStart="9dp"
        android:layout_marginTop="28dp"/>

    <EditText
        android:id="@+id/fullname"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Full Name"
        android:layout_marginTop="-46dp"
        android:layout_marginLeft="80dp"
        android:background="@drawable/button_background"
        android:foreground="@color/Background_button_detail_light"
        android:padding="10dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#B3EAE0E0"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/email_icon"
        android:layout_marginStart="9dp"
        android:layout_marginTop="28dp"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:layout_marginTop="-48dp"
        android:layout_marginLeft="80dp"
        android:background="@drawable/button_background"
        android:foreground="@color/Background_button_detail_light"
        android:padding="10dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#B3EAE0E0"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/password_icon"
        android:layout_marginStart="9dp"
        android:layout_marginTop="28dp"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:layout_marginTop="-46dp"
        android:layout_marginLeft="80dp"
        android:background="@drawable/button_background"
        android:foreground="@color/Background_button_detail_light"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#B3EAE0E0"/>

    <Button
        android:id="@+id/bt_register"
        android:layout_width="376dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn_bg"
        android:foreground="@color/Background_button_detail_light1"
        android:text="Register"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="10dp"
        android:text="Already have an account? Log In"
        android:textColor="#FFFFFF" />

</LinearLayout>